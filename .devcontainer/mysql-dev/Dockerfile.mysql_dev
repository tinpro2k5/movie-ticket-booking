FROM ubuntu:22.04

# Cài các gói cơ bản
RUN apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get install -y \
    build-essential \
    git \
    curl \
    vim \
    sudo \
    npm \
    mysql-server \
    libmysqlclient-dev && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Tạo user devuser
RUN useradd -m devuser && echo "devuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Sửa quyền socket cho mysql
RUN mkdir -p /var/run/mysqld && \
    chown mysql:mysql /var/run/mysqld

# Copy script start MySQL
COPY start-mysql.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/start-mysql.sh

# Expose port
EXPOSE 3306

# Start MySQL and keep container alive
CMD ["bash", "/usr/local/bin/start-mysql.sh"]
